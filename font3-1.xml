   </view>

   <view name="detailed,video">
      <text name="md_description">
         <fontSize>0.030</fontSize><!-- 40 -->
         <lineSpacing>1.5125</lineSpacing>
      </text>
      <datetime name="md_releasedate">
         <fontSize>0.025925925925926</fontSize><!-- 28 -->
      </datetime>
      <text name="md_players">
         <fontSize>0.025925925925926</fontSize><!-- 28 -->
      </text>
      <text name="md_lastplayed">
         <fontSize>0.025925925925926</fontSize><!-- 28 -->
      </text>
      <text name="md_playcount">
         <fontSize>0.025925925925926</fontSize><!-- 28 -->
      </text>

   </view>

   <view name="menu">

      <menuText name="menutitle">
         <fontSize>0.03</fontSize> <!-- 0.045 -->
      </menuText>

      <menuText name="menutext">         <!-- <fontSize>0.036</fontSize> -->
         <fontSize>0.035</fontSize>
      </menuText>

   </view>

</theme>