<theme>

   <variables>
      <fontBold>./_inc/fonts/Oxygen-Bold.otf</fontBold>
      <fontLight>./_inc/fonts/Oxygen-Light.otf</fontLight>
      <fontRegular>./_inc/fonts/Oxygen-Regular.otf</fontRegular>
   </variables>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <fontSize>0.038</fontSize><!-- 32 -->
         <lineSpacing>1.5125</lineSpacing>
