 <theme>

   <subset name="tumbnail" displayName="Thumbnail Box">
      <include name="on" displayName="On">./thumbnail-on.xml</include>
      <include name="off" displayName="Off">./thumbnail-off.xml</include>
   </subset>

   <view name="detailed,video">

<!--  no image game-metadata-background  -->
       <image name="gamelist-background" extra="true">
         <size>0.45 1</size> <!--  <zIndex>4</zIndex> -->
      </image> 

      <image name="md_releasedate_icon,md_players_icon,md_lastplayed_icon,md_playcount_icon" extra="true">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <color>${gamelistListMetadataIconColor}</color>
      </image>

      <text name="md_players,md_players,md_description">
         <visible>false</visible>
	  </text>
      <datetime name="md_releasedate,md_lastplayed,md_playcount">
         <visible>false</visible>
      </datetime>
      <rating name="md_rating">
         <visible>false</visible>
      </rating>
	   
   </view>

   <view name="detailed">

      <image name="md_image"> <!-- <zIndex>3</zIndex> -->
         <pos>0.725 0.5</pos><!-- 480 240 -->
         <maxSize>0.40625 0.895833333333333</maxSize><!-- 260 430 -->
      </image>

      <image name="md_marquee"> <!--  zIndex not set -->
         <origin>0.5 0.5</origin>
         <pos>0.725 0.175</pos><!-- 480 240 -->
         <maxSize>0.4 0.20</maxSize><!-- 230 430 -->
      </image>
<!--  md_thubnail added at metadata-off -->
      <image name="md_thumbnail"> <!--  zIndex not set -->
         <pos>0.55 0.75</pos>
         <maxSize>0.18 0.30</maxSize>
      </image>

   </view>

   <view name="video">

      <video name="md_video"> <!-- <zIndex>3</zIndex> -->
         <pos>0.725 0.5</pos><!-- 480 240 -->
         <maxSize>0.46 0.895833333333333</maxSize><!-- 260 430 -->
      </video>

      <image name="md_marquee"> <!--  zIndex not set -->
         <origin>0.5 0.5</origin>
         <pos>0.725 0.175</pos><!-- 480 240 -->
         <maxSize>0.4 0.20</maxSize><!-- 230 430 -->
      </image>
<!--  md_thumbnail added at metadata-off -->
      <image name="md_thumbnail"> <!--  zIndex not set -->
         <pos>0.55 0.75</pos>
         <maxSize>0.18 0.30</maxSize>
      </image>

   </view>

</theme>

