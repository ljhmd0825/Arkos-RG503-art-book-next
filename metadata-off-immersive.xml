 <theme>

   <view name="detailed,video">

<!--  no image game-metadata-background  -->

      <image name="gamelist-background" extra="true">
         <size>0.45 1</size> <!--  <zIndex>4</zIndex> -->
      </image> 

      <image name="md_releasedate_icon,md_players_icon,md_lastplayed_icon,md_playcount_icon" extra="true">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <color>${gamelistListMetadataIconColor}</color>
      </image>

      <text name="md_players,md_players">
         <visible>false</visible>
	  </text>
      <datetime name="md_releasedate,md_lastplayed">
         <visible>false</visible>
      </datetime>

   </view>

   <view name="detailed">

      <image name="md_image"> <!-- <zIndex>3</zIndex> -->
         <origin>0.5 0.5</origin>
         <pos>0.725 0.5</pos><!-- 480 240 -->
         <color>FFFFFF99</color> <!-- 60% -->
         <maxSize>1.1 1.1</maxSize>
      </image>
      <image name="md_marquee"> <!--  zIndex not set -->
         <pos>0.725 0.5</pos><!-- 480 240 -->
         <maxSize>0.4 0.9</maxSize><!-- 230 430 -->
      </image>

   </view>

   <view name="video">

      <video name="md_video"> <!-- <zIndex>3</zIndex> -->
         <origin>0.5 0.5</origin>
         <pos>0.725 0.5</pos><!-- 480 240 -->
         <maxSize>1.1 1.1</maxSize>
         <effect>none</effect>
         <showSnapshotDelay>true</showSnapshotDelay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <color>FFFFFF99</color> <!-- 60% -->
      </video>

      <image name="md_marquee"> <!--  zIndex not set -->
         <pos>0.725 0.5</pos><!-- 480 240 -->
         <maxSize>0.4 0.9</maxSize><!-- 230 430 -->
      </image>

   </view>

</theme>
